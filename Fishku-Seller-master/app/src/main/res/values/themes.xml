<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Content.TextContent">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Content.TextContent.Grey500">
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="Content.TextField">
        <item name="android:layout_marginStart">4dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">0dp</item>
        <item name="paddingStart">0dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>

<!--    Button-->
    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="roundedImageView40" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Bold">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Text.SemiBold">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Text.Medium">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Text.Regular">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Text.Regular.Header">
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="Text.Regular.Subheader">
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="Text.Bold.Toolbar">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Text.Bold.Big">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Text.Bold.Big.Center">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text.SemiBold.Big">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Text.SemiBold.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Text.Medium.Big">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Text.Medium.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Medium.Medium.Tab">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.Regular.Big">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Regular.Big.Center">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text.Regular.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Regular.Small">
        <item name="android:textSize">12sp</item>
    </style>

</resources>